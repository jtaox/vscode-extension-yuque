{
	"name": "vscode-extension-yuque",
	"displayName": "vscode-extension-yuque",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-extension-yuque.helloWorld",
		"onView:repos-book"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-extension-yuque.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "yuque.addDoc",
				"title": "Add",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			}
		],
		"viewsWelcome": [],
		"views": {
			"yuque": [
				{
					"id": "repos-book",
					"name": "Book Repos",
					"icon": "media/yuque.svg",
					"contextualTitle": "repos"
				},
				{
					"id": "docs",
					"name": "docs",
					"icon": "media/yuque.svg",
					"contextualTitle": "docs"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "yuque",
					"title": "Yuque",
					"icon": "media/yuque.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "yuque.changeRepoType",
					"when": "view == yuque"
				}
			],
			"view/item/context": [
				{
					"command": "yuque.addDoc",
					"group": "inline",
					"when": "view == repos-book && viewItem == repo"
				}
			]
		},
		"configuration": {
			"title": "Yuque",
			"properties": {
				"yuque.token": {
					"type": "string",
					"default": "",
					"description": "Personal Access Token"
				},
				"yuque.login": {
					"type": "string",
					"default": "",
					"description": "Yuque login"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/cheerio": "^0.22.21",
		"axios": "^0.19.2",
		"cheerio": "^1.0.0-rc.3",
		"parcel-bundler": "^1.12.4"
	}
}
